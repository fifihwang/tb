@model IEnumerable<assign1006.Models.FOOD>

@{
    ViewBag.Title = "Foods";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Food List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.foodname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.foodcalorie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.foodaddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.foodname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.foodcalorie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.foodaddress)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
